{
  "name": "pm2-service-discovery-prom",
  "version": "1.0.0",
  "description": "Service discovery for pm2 which will listen your commands and expose target to prometheus",
  "main": "index.js",
  "scripts": {
    "test": "mocha --ui bdd --reporter spec --require babel-register ./test/*.test.js ./test/**/*.test.js",
    "test:coverage:dev": "nyc --reporter=text --require babel-register mocha --ui bdd --reporter spec --require babel-register ./test/*.test.js ./test/**/*.test.js",
    "test:coverage": "nyc --reporter=lcov --require babel-register mocha --ui bdd --reporter spec --require babel-register ./test/*.test.js ./test/**/*.test.js",
    "eslint": "npx eslint --quiet .",
    "report-coverage": "cat coverage/lcov.info | coveralls",
    "prebuild": "rimraf ./dist",
    "build": "babel src -d ./dist -s --ignore test.js",
    "precommit": "lint-staged",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "bluebird": "3.5.5",
    "body-parser": "1.19.0",
    "bunyan": "1.8.12",
    "bunyan-stdout-stream": "^1.2.1",
    "express": "4.17.1",
    "morgan": "1.9.1",
    "pm2": "3.5.1",
    "pmx": "1.6.7"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^10.0.2",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.1",
    "eslint": "^6.0.1",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-plugin-flowtype": "^3.11.1",
    "eslint-plugin-import": "^2.12.0",
    "husky": "^3.0.0",
    "lint-staged": "^9.1.0",
    "mocha": "^7.1.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^14.1.1",
    "semantic-release": "^15.13.19",
    "sinon": "^7.3.2",
    "sinon-chai": "^3.2.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Goodluckhf/pm2ServiceDiscovery.git"
  },
  "engines": {
    "node": ">=6.10.0"
  },
  "apps": [
    {
      "name": "pm2-service-discovery",
      "merge_logs": true,
      "max_memory_restart": "200M",
      "script": "dist/index.js"
    }
  ],
  "config": {
    "events": [
      "start",
      "restart",
      "exit"
    ],
    "pm2_service_discovery_port": 9111,
    "app_name_filter": "publishing",
    "target_base_port": 9300,
    "target_host": "host.docker.internal",
    "service_name": "pm2_service_discovery",
    "polling_interval": 20000
  },
  "author": "Goodluckhf <Goodluckhf@yandex.ru>",
  "license": "MIT",
  "lint-staged": {
    "*.js": "eslint"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "eslint-config-airbnb-base"
    ],
    "parser": "babel-eslint",
    "rules": {
      "no-multi-spaces": 0,
      "indent": [
        "error",
        "tab"
      ],
      "no-tabs": 0,
      "key-spacing": [
        "error",
        {
          "align": {
            "beforeColon": false,
            "afterColon": true,
            "on": "colon"
          }
        }
      ],
      "no-underscore-dangle": [
        "error",
        {
          "allowAfterThis": true
        }
      ],
      "spaced-comment": 0,
      "no-trailing-spaces": 0,
      "arrow-body-style": [
        1,
        "as-needed"
      ]
    }
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          },
          "useBuiltIns": "usage",
          "loose": true
        }
      ]
    ],
    "plugins": [
      [
        "transform-object-rest-spread",
        {
          "useBuiltIns": true
        }
      ]
    ]
  },
  "release": {
    "analyzeCommits": {
      "preset": "angular",
      "releaseRules": [
        {
          "type": "docs",
          "release": "patch"
        },
        {
          "type": "refactor",
          "release": "patch"
        },
        {
          "type": "chore",
          "release": "patch"
        }
      ]
    }
  },
  "files": [
    "dist/**/*.*"
  ]
}
